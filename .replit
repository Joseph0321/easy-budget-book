modules = ["java-graalvm22.3", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_anthropic_ai_integrations:2.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spring Boot Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Vue Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Receipt API Server"

[[workflows.workflow]]
name = "Spring Boot Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn spring-boot:run"
waitForPort = 8080

[[workflows.workflow]]
name = "Vue Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Receipt API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && node server/receiptApi.js"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 8080
externalPort = 8080

[nix]
channel = "stable-25_05"

[deployment]
deploymentTarget = "cloudrun"
